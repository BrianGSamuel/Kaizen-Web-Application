@model KaizenWebApp.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .summary-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .summary-card .d-flex {
            flex: 1;
        }

        .summary-card:hover {
            transform: translateY(-5px);
        }

        .summary-card.submissions {
            border-left: 5px solid #007bff;
        }

        .summary-card.target {
            border-left: 5px solid #28a745;
        }

        .summary-card.cost-savings {
            border-left: 5px solid #ffc107;
        }

        .summary-card.pending {
            border-left: 5px solid #dc3545;
        }

        .summary-card.approved {
            border-left: 5px solid #17a2b8;
        }

        .summary-card.rejected {
            border-left: 5px solid #6f42c1;
        }

    .metric-value {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .metric-label {
        font-size: 0.9rem;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .metric-change {
        font-size: 0.875rem;
        font-weight: 600;
    }

        .metric-change.positive {
            color: #28a745;
        }

        .metric-change.negative {
            color: #dc3545;
        }

        .metric-change.neutral {
            color: #6c757d;
        }

    .status-badge {
        padding: 0.2rem 0.4rem;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 600;
        display: inline-block;
        min-width: fit-content;
    }

    .status-completed {
        background-color: #d4edda;
        color: #155724;
    }

    .status-on-track {
        background-color: #d1ecf1;
        color: #0c5460;
    }

    .status-behind {
        background-color: #fff3cd;
        color: #856404;
    }

    .status-at-risk {
        background-color: #f8d7da;
        color: #721c24;
    }

    .progress-bar {
        height: 8px;
        border-radius: 4px;
        background-color: #e9ecef;
        overflow: hidden;
        margin-top: 1rem;
    }

    .progress-fill {
        height: 100%;
        border-radius: 4px;
        transition: width 0.3s ease;
    }

        .progress-fill.completed {
            background-color: #28a745;
        }

        .progress-fill.on-track {
            background-color: #17a2b8;
        }

        .progress-fill.behind {
            background-color: #ffc107;
        }

        .progress-fill.at-risk {
            background-color: #dc3545;
        }

    .welcome-section {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

        .row > [class*="col-"] {
            display: flex;
            flex-direction: column;
        }

    .text-purple {
        color: #6f42c1 !important;
    }

    .btn-user {
        background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-user:hover {
            background: linear-gradient(135deg, #1e3a8a 0%, #1e3a8a 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(30, 64, 175, 0.3);
            text-decoration: none;
        }


</style>



<div class="container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <div class="row align-items-center">
            <div class="col-12">
                <h4 class="mb-2">Welcome to your User Dashboard</h4>
                <p class="text-muted mb-0">Hello <strong>@Model.EmployeeName</strong> (@Model.EmployeeNumber), here's your kaizen activity summary for <strong>@Model.CurrentMonthName @Model.CurrentYear</strong>.</p>
            </div>
        </div>
    </div>

    <!-- Summary Cards Row 1 -->
    <div class="row">
        <!-- Total Kaizens Submitted -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card submissions">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-primary">@Model.TotalKaizensSubmitted</div>
                        <div class="metric-label">Total Kaizens Submitted</div>
                        <div class="text-muted">All time submissions</div>
                    </div>
                    <div class="text-primary">
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Current Month Submissions -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card target">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-success">@Model.CurrentMonthSubmissions</div>
                        <div class="metric-label">This Month Submissions</div>
                        <div class="text-muted">@Model.CurrentMonthName @Model.CurrentYear</div>
                    </div>
                    <div class="text-success">
                        <i class="fas fa-calendar-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Department Target Achievement -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card cost-savings">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-warning">@Model.DepartmentTargetAchievement.ToString("F1")%</div>
                        <div class="metric-label">Department Target</div>
                        <div class="text-muted">@Model.DepartmentCurrentMonthSubmissions of @Model.DepartmentTarget target</div>
                    </div>
                    <div class="text-warning">
                        <i class="fas fa-bullseye fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards Row 2 -->
    <div class="row">
        <!-- Pending Kaizens -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card pending">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-danger">@Model.PendingKaizens</div>
                        <div class="metric-label">Pending Kaizens</div>
                        <div class="text-muted">Awaiting review</div>
                    </div>
                    <div class="text-danger">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approved Kaizens -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card approved">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-info">@Model.ApprovedKaizens</div>
                        <div class="metric-label">Approved Kaizens</div>
                        <div class="text-muted">Successfully approved</div>
                    </div>
                    <div class="text-info">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Rejected Kaizens -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card rejected">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-purple">@Model.RejectedKaizens</div>
                        <div class="metric-label">Rejected Kaizens</div>
                        <div class="text-muted">Not approved</div>
                    </div>
                    <div class="text-purple">
                        <i class="fas fa-times-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>


