@model KaizenWebApp.ViewModels.EngineerDashboardViewModel
@{
    ViewData["Title"] = "Engineer Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .summary-card {
        background: white;
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .summary-card .d-flex {
        flex: 1;
    }

    .summary-card:hover {
        transform: translateY(-5px);
    }

    .summary-card.submissions {
        border-left: 5px solid #007bff;
    }

    .summary-card.target {
        border-left: 5px solid #28a745;
    }

    .summary-card.cost-savings {
        border-left: 5px solid #ffc107;
    }

    .summary-card.pending-reviews {
        border-left: 5px solid #dc3545;
    }

    .summary-card.approved {
        border-left: 5px solid #17a2b8;
    }

    .summary-card.approval-rate {
        border-left: 5px solid #6f42c1;
    }

    .metric-value {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .metric-label {
        font-size: 0.9rem;
        color: #6c757d;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .metric-change {
        font-size: 0.875rem;
        font-weight: 600;
    }

    .metric-change.positive {
        color: #28a745;
    }

    .metric-change.negative {
        color: #dc3545;
    }

    .metric-change.neutral {
        color: #6c757d;
    }

    .status-badge {
        padding: 0.2rem 0.4rem;
        border-radius: 12px;
        font-size: 0.7rem;
        font-weight: 600;
        display: inline-block;
        min-width: fit-content;
    }

    .status-completed { background-color: #d4edda; color: #155724; }
    .status-on-track { background-color: #d1ecf1; color: #0c5460; }
    .status-behind { background-color: #fff3cd; color: #856404; }
    .status-at-risk { background-color: #f8d7da; color: #721c24; }

    .progress-bar {
        height: 8px;
        border-radius: 4px;
        background-color: #e9ecef;
        overflow: hidden;
        margin-top: 1rem;
    }

    .progress-fill {
        height: 100%;
        border-radius: 4px;
        transition: width 0.3s ease;
    }

    .progress-fill.completed { background-color: #28a745; }
    .progress-fill.on-track { background-color: #17a2b8; }
    .progress-fill.behind { background-color: #ffc107; }
    .progress-fill.at-risk { background-color: #dc3545; }

    .welcome-section {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .row > [class*="col-"] {
        display: flex;
        flex-direction: column;
    }

    .text-purple {
        color: #6f42c1 !important;
    }

    .btn-engineer {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-engineer:hover {
        background: linear-gradient(135deg, #0056b3 0%, #004085 100%);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
        text-decoration: none;
    }
</style>

<div class="container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <div class="row align-items-center">
            <div class="col-12">
                <h4 class="mb-2">Welcome to your Engineer Dashboard</h4>
                <p class="text-muted mb-0">You're reviewing kaizens for the <strong>@Model.Department</strong> department. Here's how your department is performing this month.</p>
            </div>
        </div>
    </div>

    <!-- Summary Cards Row 1 -->
    <div class="row">
        <!-- Current Month Submissions -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card submissions">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-primary">@Model.CurrentMonthSubmissions</div>
                        <div class="metric-label">Current Month Submissions</div>
                    </div>
                    <div class="text-primary">
                        <i class="fas fa-file-alt fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Target Achievement -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card target">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-success">@Model.CurrentMonthAchievement.ToString("F1")%</div>
                        <div class="metric-label">Target Achievement</div>
                        <div class="text-muted">@Model.CurrentMonthSubmissions of @Model.CurrentMonthTarget target</div>
                    </div>
                    <div class="text-success">
                        <i class="fas fa-bullseye fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cost Savings -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card cost-savings">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-warning">$@Model.CurrentMonthCostSavings.ToString("N0")</div>
                        <div class="metric-label">Cost Savings</div>
                        <div class="text-muted">Engineer approved with savings</div>
                    </div>
                    <div class="text-warning">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Cards Row 2 -->
    <div class="row">
        <!-- Pending Reviews -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card pending-reviews">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-danger">@Model.PendingReviews</div>
                        <div class="metric-label">Pending Reviews</div>
                        <div class="text-muted">Requires your attention</div>
                    </div>
                    <div class="text-danger">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Fully Implemented Kaizens -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card approved">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-info">@Model.BothApprovedKaizens</div>
                        <div class="metric-label">Fully Implemented Kaizens</div>
                        <div class="text-muted">Manager & Engineer Approved</div>
                    </div>
                    <div class="text-info">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approval Rate -->
        <div class="col-lg-4 col-md-6">
            <div class="summary-card approval-rate">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="metric-value text-purple">@Model.ApprovalRate.ToString("F1")%</div>
                        <div class="metric-label">Approval Rate</div>
                        <div class="text-muted">@Model.ApprovedKaizens of @Model.TotalReviewed reviewed</div>
                    </div>
                    <div class="text-purple">
                        <i class="fas fa-chart-pie fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- Additional Statistics Row -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="summary-card">
                <h6 class="mb-3">
                    <i class="fas fa-chart-line me-2"></i>
                    Review Performance
                </h6>
                <div class="row">
                    <div class="col-6">
                        <div class="text-center">
                            <div class="metric-value text-success">@Model.ReviewCompletionRate.ToString("F1")%</div>
                            <div class="metric-label">Review Completion</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="text-center">
                            <div class="metric-value text-danger">@Model.RejectedKaizens</div>
                            <div class="metric-label">Rejected</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
