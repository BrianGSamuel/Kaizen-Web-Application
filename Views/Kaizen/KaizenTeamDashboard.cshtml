@{
    ViewData["Title"] = "Kaizen Team Dashboard";
    Layout = "~/Views/Shared/_KaizenTeamLayout.cshtml";
}

<!-- Login Success Toast Message -->
@if (TempData["LoginSuccessMessage"] != null)
{
    <div data-tempdata="login-success" style="display: none;">@TempData["LoginSuccessMessage"]</div>
}

<div class="row">
    <div class="col mb-4">
                    <div class="manager-card h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <i class="fas fa-clipboard-list fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h3 class="mb-0">@ViewBag.TotalKaizens</h3>
                        <p class="text-muted mb-0">Total Kaizens</p>
                    </div>
                </div>
            </div>
    </div>
    
    <div class="col mb-4">
        <div class="manager-card h-100">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="fas fa-clock fa-2x text-warning"></i>
                </div>
                <div>
                    <h3 class="mb-0">@ViewBag.PendingKaizens</h3>
                    <p class="text-muted mb-0">Pending Kaizens</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col mb-4">
        <div class="manager-card h-100">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="fas fa-check-circle fa-2x text-success"></i>
                </div>
                <div>
                    <h3 class="mb-0">@ViewBag.ApprovedKaizens</h3>
                    <p class="text-muted mb-0">Approved Kaizens</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col mb-4">
        <div class="manager-card h-100">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="fas fa-times-circle fa-2x text-danger"></i>
                </div>
                <div>
                    <h3 class="mb-0">@ViewBag.RejectedKaizens</h3>
                    <p class="text-muted mb-0">Rejected Kaizens</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col mb-4">
        <div class="manager-card h-100">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="fas fa-trophy fa-2x text-warning"></i>
                </div>
                <div>
                    <h3 class="mb-0">@ViewBag.AwardedKaizens</h3>
                    <p class="text-muted mb-0">Awarded Kaizens</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="manager-card">
            <div class="manager-card-header">
                <h5 class="manager-card-title">
                    <i class="fas fa-chart-line me-2"></i>Recent Activity
                </h5>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Description</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><i class="fas fa-clipboard-check text-primary"></i></td>
                            <td>New kaizen form submitted</td>
                            <td>@DateTime.Now.AddDays(-1).ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-check text-success"></i></td>
                            <td>Kaizen approved by engineer</td>
                            <td>@DateTime.Now.AddDays(-2).ToString("MMM dd, yyyy")</td>
                        </tr>
                        <tr>
                            <td><i class="fas fa-trophy text-warning"></i></td>
                            <td>Award assigned to kaizen</td>
                            <td>@DateTime.Now.AddDays(-3).ToString("MMM dd, yyyy")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="kaizen-card">
            <div class="kaizen-card-header">
                <h5 class="kaizen-card-title">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h5>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="mb-1"><strong>Current User:</strong></p>
                    <p class="text-muted">@User.Identity?.Name</p>
                </div>
                <div class="col-6">
                    <p class="mb-1"><strong>Role:</strong></p>
                    <p class="text-muted">Kaizen Team Member</p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="mb-1"><strong>System Status:</strong></p>
                    <p class="text-success">Online</p>
                </div>
                <div class="col-6">
                    <p class="mb-1"><strong>Last Updated:</strong></p>
                    <p class="text-muted">@DateTime.Now.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="kaizen-card">
            <div class="kaizen-card-header">
                <h5 class="kaizen-card-title">
                    <i class="fas fa-bullseye me-2"></i>Department Performance
                </h5>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="mb-1"><strong>Most Active Department:</strong></p>
                    <p class="text-muted">@ViewBag.MostActiveDepartment</p>
                </div>
                <div class="col-6">
                    <p class="mb-1"><strong>Total Submissions:</strong></p>
                    <p class="text-muted">@ViewBag.MostActiveCount</p>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="mb-1"><strong>Highest Cost Saving:</strong></p>
                    <p class="text-success">$@ViewBag.HighestCostSaving.ToString("N0")</p>
                </div>
                <div class="col-6">
                    <p class="mb-1"><strong>Department:</strong></p>
                    <p class="text-muted">@ViewBag.HighestCostSavingDepartment</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="kaizen-card">
            <div class="kaizen-card-header">
                <h5 class="kaizen-card-title">
                    <i class="fas fa-chart-pie me-2"></i>Status Distribution
                </h5>
            </div>
            <div class="row">
                <div class="col-4 text-center">
                    <div class="status-circle bg-warning">
                        <span class="status-number">@ViewBag.PendingPercentage%</span>
                    </div>
                    <p class="text-muted mt-2">Pending</p>
                </div>
                <div class="col-4 text-center">
                    <div class="status-circle bg-success">
                        <span class="status-number">@ViewBag.ApprovedPercentage%</span>
                    </div>
                    <p class="text-muted mt-2">Approved</p>
                </div>
                <div class="col-4 text-center">
                    <div class="status-circle bg-danger">
                        <span class="status-number">@ViewBag.RejectedPercentage%</span>
                    </div>
                    <p class="text-muted mt-2">Rejected</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .status-circle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        color: white;
        font-weight: bold;
        font-size: 14px;
    }
    
    .status-number {
        font-size: 16px;
        font-weight: 700;
    }
    
    .kaizen-card {
        transition: all 0.3s ease;
    }
    
    .kaizen-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
</style>
