@model List<KaizenWebApp.Models.KaizenForm>
@{
    ViewData["Title"] = "View All Kaizens";
    Layout = "~/Views/Shared/_KaizenTeamLayout.cshtml";
}

<style>
    @@media print {
        .search-section {
            display: none !important;
        }
        
        .btn {
            display: none !important;
        }
        
        .card-header {
            background-color: #f8f9fa !important;
            color: #000 !important;
        }
        
        .table-dark {
            background-color: #343a40 !important;
            color: #fff !important;
        }
        
        .table-dark th {
            background-color: #343a40 !important;
            color: #fff !important;
        }
        
        .badge {
            border: 1px solid #000 !important;
        }
        
        .bg-success {
            background-color: #d4edda !important;
            color: #155724 !important;
        }
        
        .bg-danger {
            background-color: #f8d7da !important;
            color: #721c24 !important;
        }
        
        .bg-warning {
            background-color: #fff3cd !important;
            color: #856404 !important;
        }
        
        .bg-primary {
            background-color: #cce7ff !important;
            color: #004085 !important;
        }
        
        /* Additional print optimizations */
        body {
            margin: 0 !important;
            padding: 0 !important;
        }
        
        .container-fluid {
            width: 100% !important;
            max-width: none !important;
        }
        
        .card {
            border: 1px solid #000 !important;
            box-shadow: none !important;
        }
        
        .table {
            font-size: 12px !important;
        }
        
        .table th,
        .table td {
            padding: 8px 4px !important;
            border: 1px solid #000 !important;
        }
        
        /* Ensure text is readable in print */
        .text-muted {
            color: #6c757d !important;
        }
        
        .text-success {
            color: #155724 !important;
        }
        
        /* Hide unnecessary elements */
        .kaizen-sidebar,
        .kaizen-header,
        .kaizen-toggle {
            display: none !important;
        }
        
        .kaizen-main {
            margin-left: 0 !important;
            padding: 0 !important;
        }
        
        .kaizen-content {
            padding: 0 !important;
        }
    }
</style>

<div class="container-fluid">
    <!-- Advanced Search Section -->
    <div class="search-section mb-4">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-search me-2"></i>Search & Filter
                </h5>
            </div>
            <div class="card-body">
                <form id="advancedSearchForm" method="get">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="quarter" class="form-label fw-bold">Quarter</label>
                                <select id="quarter" name="quarter" class="form-select">
                                    <option value="">All Quarters</option>
                                    @{
                                        var currentQuarter = ((DateTime.Now.Month - 1) / 3) + 1;
                                        var quarters = new[] { 1, 2, 3, 4 };
                                        foreach (var q in quarters)
                                        {
                                            var quarterText = q switch
                                            {
                                                1 => "1st Quarter",
                                                2 => "2nd Quarter",
                                                3 => "3rd Quarter",
                                                4 => "4th Quarter",
                                                _ => "1st Quarter"
                                            };
                                            if (ViewBag.CurrentFilters?.Quarter == q.ToString())
                                            {
                                                <option value="@q" selected="@true">@quarterText</option>
                                            }
                                            else
                                            {
                                                <option value="@q">@quarterText</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="category" class="form-label fw-bold">Category</label>
                                <select id="category" name="category" class="form-select">
                                    <option value="">All Categories</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        foreach (var cat in ViewBag.Categories)
                                        {
                                            if (ViewBag.CurrentFilters?.Category == cat)
                                            {
                                                <option value="@cat" selected="@true">@cat</option>
                                            }
                                            else
                                            {
                                                <option value="@cat">@cat</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="status" class="form-label fw-bold">Overall Status</label>
                                <select id="status" name="status" class="form-select">
                                    <option value="">All Status</option>
                                    @if (ViewBag.CurrentFilters?.Status == "Approved")
                                    {
                                        <option value="Approved" selected>Approved</option>
                                    }
                                    else
                                    {
                                        <option value="Approved">Approved</option>
                                    }
                                    @if (ViewBag.CurrentFilters?.Status == "Rejected")
                                    {
                                        <option value="Rejected" selected>Rejected</option>
                                    }
                                    else
                                    {
                                        <option value="Rejected">Rejected</option>
                                    }
                                    @if (ViewBag.CurrentFilters?.Status == "Pending")
                                    {
                                        <option value="Pending" selected>Pending</option>
                                    }
                                    else
                                    {
                                        <option value="Pending">Pending</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="department" class="form-label fw-bold">Department</label>
                                <select id="department" name="department" class="form-select">
                                    <option value="">All Departments</option>
                                    @if (ViewBag.Departments != null)
                                    {
                                        foreach (var dept in ViewBag.Departments)
                                        {
                                            if (ViewBag.CurrentFilters?.Department == dept)
                                            {
                                                <option value="@dept" selected="@true">@dept</option>
                                            }
                                            else
                                            {
                                                <option value="@dept">@dept</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="mb-3">
                                <label for="searchString" class="form-label fw-bold">Search</label>
                                <input type="text" id="searchString" name="searchString" class="form-control"
                                       placeholder="Search by Kaizen No, Employee Name, or Employee No..."
                                       value="@ViewBag.CurrentFilters?.SearchString" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Search
                                </button>
                                <button type="button" id="clearBtn" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Clear Filters
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Results Section -->
    <div class="results-section">
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-list me-2"></i>Kaizen Results
                        <span id="resultCount" class="badge bg-primary ms-2">@Model.Count()</span>
                    </h5>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-success" onclick="exportToExcel()" title="Export to Excel format matching the image specification">
                            <i class="fas fa-file-excel me-2"></i>Export Excel
                        </button>
                        <button type="button" class="btn btn-outline-secondary" onclick="printResults()">
                            <i class="fas fa-print me-2"></i>Print
                        </button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div id="searchResults">
                    @if (!Model?.Any() ?? true)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No Kaizen suggestions found</h4>
                            <p class="text-muted mb-0">Try adjusting your search criteria</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-calendar me-2"></i>Date Submitted</th>
                                        <th><i class="fas fa-hashtag me-2"></i>Kaizen No</th>
                                        <th><i class="fas fa-building me-2"></i>Department</th>
                                        <th><i class="fas fa-user me-2"></i>Employee Name</th>
                                        <th><i class="fas fa-coins me-2"></i>Cost Saving</th>
                                        <th><i class="fas fa-user-cog me-2"></i>Engineer Status</th>
                                        <th><i class="fas fa-user-tie me-2"></i>Manager Status</th>
                                        <th><i class="fas fa-info-circle me-2"></i>Overall Status</th>
                                        <th><i class="fas fa-cogs me-2"></i>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var engineerStatus = item.EngineerStatus ?? "Pending";
                                        var managerStatus = item.ManagerStatus ?? "Pending";
                                        
                                        // Business logic for overall status
                                        var overallStatus = "Pending";
                                        var overallStatusClass = "badge bg-warning";
                                        
                                        if (engineerStatus == "Rejected" || managerStatus == "Rejected")
                                        {
                                            overallStatus = "Rejected";
                                            overallStatusClass = "badge bg-danger";
                                        }
                                        else if (engineerStatus == "Approved" && managerStatus == "Approved")
                                        {
                                            overallStatus = "Approved";
                                            overallStatusClass = "badge bg-success";
                                        }

                                        <tr>
                                            <td class="text-center">@item.DateSubmitted.ToString("yyyy-MM-dd")</td>
                                            <td class="text-center fw-bold">@Html.DisplayFor(modelItem => item.KaizenNo)</td>
                                            <td class="text-center">@Html.DisplayFor(modelItem => item.Department)</td>
                                            <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                            <td class="text-center">
                                                @if (item.CostSaving.HasValue && item.CostSaving > 0)
                                                {
                                                    <span class="text-success fw-bold">$@item.CostSaving.Value.ToString("N0")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No Cost Saving</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @(engineerStatus == "Approved" ? "bg-success" : engineerStatus == "Rejected" ? "bg-danger" : "bg-warning")">
                                                    @engineerStatus
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @if (engineerStatus == "Rejected")
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                                else
                                                {
                                                    <span class="badge @(managerStatus == "Approved" ? "bg-success" : managerStatus == "Rejected" ? "bg-danger" : "bg-warning")">
                                                        @managerStatus
                                                    </span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="@overallStatusClass">@overallStatus</span>
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("KaizenTeamDetails", "Kaizen", new { id = item.Id })" class="btn btn-sm btn-outline-primary" title="View Details">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    // Clear filters
    document.getElementById('clearBtn').addEventListener('click', function() {
        const form = document.getElementById('advancedSearchForm');
        const inputs = form.querySelectorAll('input, select');
        inputs.forEach(input => {
            input.value = '';
        });
        form.submit();
    });



    function exportToExcel() {
        // Show loading indicator
        const exportBtn = event.target;
        const originalText = exportBtn.innerHTML;
        exportBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Exporting...';
        exportBtn.disabled = true;
        
        var form = $('#advancedSearchForm');
        var url = '/Kaizen/ExportToExcel?' + form.serialize();
        
        // Create a temporary link to trigger download
        var link = document.createElement('a');
        link.href = url;
        link.target = '_blank';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
        
        // Reset button after a short delay
        setTimeout(() => {
            exportBtn.innerHTML = originalText;
            exportBtn.disabled = false;
        }, 2000);
    }

    function printResults() {
        window.print();
    }
</script>
