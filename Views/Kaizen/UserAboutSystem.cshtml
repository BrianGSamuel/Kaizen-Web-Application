@{
    ViewData["Title"] = "About System";
}

<style>
    .about-section {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    .about-header {
        text-align: center;
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid #e9ecef;
    }

    .about-header h2 {
        color: #2563eb;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .about-header p {
        color: #6b7280;
        font-size: 1.1rem;
        margin-bottom: 0;
    }

    .feature-card {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
        color: white;
        font-size: 1.5rem;
    }

    .feature-title {
        color: #2563eb;
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .feature-description {
        color: #4b5563;
        line-height: 1.6;
        margin-bottom: 0;
    }

    .system-info {
        background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid #bfdbfe;
    }

    .system-info h4 {
        color: #2563eb;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        padding: 0.75rem;
        background: white;
        border-radius: 8px;
        border: 1px solid #e5e7eb;
    }

    .info-item i {
        color: #2563eb;
        margin-right: 1rem;
        width: 20px;
        text-align: center;
    }

    .info-label {
        font-weight: 600;
        color: #374151;
        margin-right: 0.5rem;
    }

    .info-value {
        color: #6b7280;
    }

    .version-badge {
        background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: inline-block;
        margin-top: 1rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        border: 1px solid #e5e7eb;
        transition: all 0.3s ease;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        color: #2563eb;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #6b7280;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .contact-info {
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
        border-radius: 12px;
        padding: 2rem;
        border: 1px solid #bae6fd;
    }

    .contact-info h4 {
        color: #2563eb;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        margin-bottom: 0.75rem;
        color: #374151;
    }

    .contact-item i {
        color: #2563eb;
        margin-right: 0.75rem;
        width: 16px;
    }

    .footer-note {
        text-align: center;
        color: #6b7280;
        font-size: 0.9rem;
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid #e5e7eb;
    }
</style>

<div class="container-fluid">
    <!-- About System Header -->
    <div class="about-section">
        <div class="about-header">
            <h2><i class="fas fa-info-circle me-3"></i>About Kaizen Management System</h2>
            <p>A comprehensive platform for managing continuous improvement suggestions and fostering innovation within the organization</p>
            <span class="version-badge">Version 2.0</span>
        </div>

        <!-- System Information -->
        <div class="system-info">
            <h4><i class="fas fa-cogs me-2"></i>System Information</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="info-item">
                        <i class="fas fa-calendar-alt"></i>
                        <span class="info-label">Last Updated:</span>
                        <span class="info-value">@DateTime.Now.ToString("MMMM dd, yyyy")</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-users"></i>
                        <span class="info-label">User Roles:</span>
                        <span class="info-value">Employee, Engineer, Manager, Supervisor, Admin</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-building"></i>
                        <span class="info-label">Departments:</span>
                        <span class="info-value">Multiple departments supported</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-item">
                        <i class="fas fa-shield-alt"></i>
                        <span class="info-label">Security:</span>
                        <span class="info-value">Role-based access control</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-database"></i>
                        <span class="info-label">Database:</span>
                        <span class="info-value">SQLite with Entity Framework</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-mobile-alt"></i>
                        <span class="info-label">Access:</span>
                        <span class="info-value">Web-based responsive design</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Key Features -->
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-edit"></i>
                    </div>
                    <h5 class="feature-title">Submit Suggestions</h5>
                    <p class="feature-description">Easily submit your continuous improvement suggestions with detailed descriptions, photos, and cost-benefit analysis.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <h5 class="feature-title">Track Progress</h5>
                    <p class="feature-description">Monitor the status of your suggestions from submission through approval and implementation.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <h5 class="feature-title">Recognition</h5>
                    <p class="feature-description">Get recognized for your contributions through the leaderboard and award system.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <h5 class="feature-title">Analytics</h5>
                    <p class="feature-description">View system statistics and analytics to understand the impact of continuous improvement efforts.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h5 class="feature-title">Collaboration</h5>
                    <p class="feature-description">Work together with team members and supervisors to implement improvements.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                    <h5 class="feature-title">Customization</h5>
                    <p class="feature-description">Personalize your experience with customizable settings and preferences.</p>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="contact-info">
            <h4><i class="fas fa-headset me-2"></i>Support & Contact</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>Email: support@company.com</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <span>Phone: +1 (555) 123-4567</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contact-item">
                        <i class="fas fa-clock"></i>
                        <span>Support Hours: 9 AM - 5 PM</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Office: Building A, Floor 2</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-note">
            <p><i class="fas fa-heart text-danger"></i> Thank you for contributing to our continuous improvement culture!</p>
        </div>
    </div>
</div>



