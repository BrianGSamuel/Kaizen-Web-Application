@model KaizenWebApp.Models.KaizenForm
@{
    ViewData["Title"] = "Award Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="admin-card">
                <div class="admin-card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="admin-card-title">
                            <i class="fas fa-trophy text-warning me-2"></i>
                            Award Details - @Model.KaizenNo
                        </h3>
                        <a href="@Url.Action("AwardTracking", "Admin")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to Award Tracking
                        </a>
                    </div>
                </div>

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Kaizen Details Section -->
                <div class="row">
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">
                                    <i class="fas fa-file-alt me-2"></i>
                                    Kaizen Details
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="fw-bold">Kaizen Number:</label>
                                            <p class="text-primary fw-bold">@Model.KaizenNo</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="fw-bold">Date Submitted:</label>
                                            <p>@Model.DateSubmitted.ToString("MMMM dd, yyyy")</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="fw-bold">Department:</label>
                                            <p><span class="badge bg-info">@Model.Department</span></p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="fw-bold">Employee:</label>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(Model.EmployeePhotoPath))
                                                {
                                                    <img src="@Model.EmployeePhotoPath" 
                                                         alt="Employee Photo" 
                                                         class="rounded-circle me-2" 
                                                         style="width: 40px; height: 40px; object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-2" 
                                                         style="width: 40px; height: 40px;">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <p class="mb-0 fw-bold">@Model.EmployeeName</p>
                                                    <small class="text-muted">@Model.EmployeeNo</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="fw-bold">Cost Saving:</label>
                                            @if (Model.CostSaving.HasValue && Model.CostSaving > 0)
                                            {
                                                <p class="text-success fw-bold">$@Model.CostSaving.Value.ToString("N2")</p>
                                            }
                                            else
                                            {
                                                <p class="text-muted">No cost saving</p>
                                            }
                                        </div>
                                        <div class="mb-3">
                                            <label class="fw-bold">Category:</label>
                                            <p>@Model.Category</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="fw-bold">Implementation Area:</label>
                                            <p>@Model.ImplementationArea</p>
                                        </div>
                                        <div class="mb-3">
                                            <label class="fw-bold">Can Implement in Other Fields:</label>
                                            <p><span class="badge bg-@(Model.CanImplementInOtherFields == "Yes" ? "success" : "secondary")">@Model.CanImplementInOtherFields</span></p>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="fw-bold">Suggestion Description:</label>
                                    <div class="border rounded p-3 bg-light">
                                        @Model.SuggestionDescription
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.OtherBenefits))
                                {
                                    <div class="mb-3">
                                        <label class="fw-bold">Other Benefits:</label>
                                        <div class="border rounded p-3 bg-light">
                                            @Model.OtherBenefits
                                        </div>
                                    </div>
                                }

                                @if (!string.IsNullOrEmpty(Model.Comments))
                                {
                                    <div class="mb-3">
                                        <label class="fw-bold">Comments:</label>
                                        <div class="border rounded p-3 bg-light">
                                            @Model.Comments
                                        </div>
                                    </div>
                                }

                                <!-- Before/After Images -->
                                <div class="row">
                                    @if (!string.IsNullOrEmpty(Model.BeforeKaizenImagePath))
                                    {
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="fw-bold">Before Kaizen:</label>
                                                <div class="text-center">
                                                    <img src="@Model.BeforeKaizenImagePath" 
                                                         class="img-fluid rounded border" 
                                                         alt="Before Kaizen" 
                                                         style="max-height: 200px; object-fit: cover;"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                                    <div class="alert alert-info" style="display: none;">
                                                        <i class="fas fa-image me-2"></i>
                                                        Image not available
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.AfterKaizenImagePath))
                                    {
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label class="fw-bold">After Kaizen:</label>
                                                <div class="text-center">
                                                    <img src="@Model.AfterKaizenImagePath" 
                                                         class="img-fluid rounded border" 
                                                         alt="After Kaizen" 
                                                         style="max-height: 200px; object-fit: cover;"
                                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                                    <div class="alert alert-info" style="display: none;">
                                                        <i class="fas fa-image me-2"></i>
                                                        Image not available
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Award Assignment Section -->
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-header bg-warning text-dark">
                                <h5 class="mb-0">
                                    <i class="fas fa-trophy me-2"></i>
                                    For KAIZEN COMMITTEE Use
                                </h5>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(Model.AwardPrice))
                                {
                                    <!-- Award Already Assigned -->
                                    <div class="alert alert-success">
                                        <h6 class="alert-heading">
                                            <i class="fas fa-check-circle me-2"></i>
                                            Award Already Assigned
                                        </h6>
                                        <p class="mb-2"><strong>Award Price:</strong> @Model.AwardPrice</p>
                                        <p class="mb-2"><strong>Date:</strong> @Model.AwardDate?.ToString("MMM dd, yyyy")</p>
                                        @if (!string.IsNullOrEmpty(Model.CommitteeSignature))
                                        {
                                            <p class="mb-2"><strong>Signature:</strong> @Model.CommitteeSignature</p>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.CommitteeComments))
                                        {
                                            <div class="mt-3">
                                                <label class="fw-bold">Comments & Recommendations:</label>
                                                <div class="border rounded p-2 bg-light">
                                                    @Model.CommitteeComments
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <!-- Award Assignment Form -->
                                    <form method="post" action="@Url.Action("AssignAward", "Admin")">
                                        <input type="hidden" name="kaizenId" value="@Model.Id" />
                                        
                                        <div class="mb-3">
                                            <label class="fw-bold">Comments & recommendations:</label>
                                            <textarea class="form-control" name="committeeComments" rows="4" 
                                                      placeholder="Enter committee comments and recommendations"></textarea>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="fw-bold">Signature:</label>
                                            <input type="text" class="form-control" name="committeeSignature" 
                                                   placeholder="Enter committee member signature" required>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <label class="fw-bold">AWARD PRICE:</label>
                                            <div class="mt-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="awardPrice" 
                                                           id="firstPrice" value="1ST PRICE" required>
                                                    <label class="form-check-label fw-bold" for="firstPrice">
                                                        1ST PRICE
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="awardPrice" 
                                                           id="secondPrice" value="2ND PRICE" required>
                                                    <label class="form-check-label fw-bold" for="secondPrice">
                                                        2ND PRICE
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="awardPrice" 
                                                           id="thirdPrice" value="3RD PRICE" required>
                                                    <label class="form-check-label fw-bold" for="thirdPrice">
                                                        3RD PRICE
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="awardPrice" 
                                                           id="noPrice" value="NO PRICE" required>
                                                    <label class="form-check-label fw-bold text-muted" for="noPrice">
                                                        NO PRICE
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="fas fa-trophy me-2"></i>
                                            Assign Award
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>

                        <!-- Approval Status -->
                        <div class="card mt-3">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0">
                                    <i class="fas fa-check-double me-2"></i>
                                    Approval Status
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-2">
                                    <span class="badge bg-@(Model.EngineerStatus == "Approved" ? "success" : "warning")">
                                        Engineer: @Model.EngineerStatus
                                    </span>
                                    @if (!string.IsNullOrEmpty(Model.EngineerApprovedBy))
                                    {
                                        <small class="text-muted d-block">by @Model.EngineerApprovedBy</small>
                                    }
                                </div>
                                <div class="mb-2">
                                    <span class="badge bg-@(Model.ManagerStatus == "Approved" ? "success" : "warning")">
                                        Manager: @Model.ManagerStatus
                                    </span>
                                    @if (!string.IsNullOrEmpty(Model.ManagerApprovedBy))
                                    {
                                        <small class="text-muted d-block">by @Model.ManagerApprovedBy</small>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(Model.ManagerComments))
                                {
                                    <div class="mt-3">
                                        <label class="fw-bold small">Manager Comments:</label>
                                        <div class="border rounded p-2 bg-light small">
                                            @Model.ManagerComments
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const awardPrice = document.querySelector('input[name="awardPrice"]:checked');
                    const signature = document.querySelector('input[name="committeeSignature"]').value;
                    
                    if (!awardPrice || !signature.trim()) {
                        e.preventDefault();
                        alert('Please select an award price and provide a signature.');
                        return false;
                    }
                });
            }
        });
    </script>
} 