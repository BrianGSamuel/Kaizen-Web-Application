@{
    ViewData["Title"] = "System Maintenance";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kaizen System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --maintenance-dark-blue: #1a237e;
            --maintenance-light-blue: #3949ab;
            --maintenance-bg: #f8f9fa;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, var(--maintenance-bg) 0%, #e3f2fd 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
        }

        .maintenance-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            padding: 40px;
            text-align: center;
            max-width: 500px;
            width: 100%;
        }

        .maintenance-icon {
            font-size: 4rem;
            color: var(--maintenance-dark-blue);
            margin-bottom: 20px;
        }

        .maintenance-title {
            color: var(--maintenance-dark-blue);
            font-size: 2rem;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .maintenance-subtitle {
            color: #6c757d;
            font-size: 1.1rem;
            margin-bottom: 30px;
        }

        .maintenance-message {
            background: #e3f2fd;
            border-left: 4px solid var(--maintenance-dark-blue);
            padding: 20px;
            margin: 20px 0;
            text-align: left;
            border-radius: 0 8px 8px 0;
        }

        .maintenance-message p {
            margin: 0;
            color: #2c3e50;
            font-size: 1rem;
        }

        .admin-login-btn {
            background: linear-gradient(135deg, var(--maintenance-dark-blue) 0%, var(--maintenance-light-blue) 100%);
            border: none;
            color: white;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

        .admin-login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(26, 35, 126, 0.4);
            color: white;
            text-decoration: none;
        }

        .logo {
            height: 60px;
            margin-bottom: 20px;
        }

        .status-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            background: #dc3545;
            border-radius: 50%;
            margin-right: 8px;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        .estimated-time {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
        }

        .estimated-time h6 {
            color: #856404;
            margin-bottom: 5px;
        }

        .estimated-time p {
            color: #856404;
            margin: 0;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="maintenance-container">
        <img src="~/images/flintec-logo.png" alt="Flintec Logo" class="logo" />
        
        <div class="maintenance-icon">
            <i class="fas fa-tools"></i>
        </div>
        
        <h1 class="maintenance-title">
            <span class="status-indicator"></span>
            System Maintenance
        </h1>
        
        <p class="maintenance-subtitle">
            We're currently performing scheduled maintenance to improve your experience.
        </p>

        @if (!string.IsNullOrEmpty(ViewBag.MaintenanceMessage))
        {
            <div class="maintenance-message">
                <p><i class="fas fa-info-circle me-2"></i>@ViewBag.MaintenanceMessage</p>
            </div>
        }

        <div class="estimated-time">
            <h6><i class="fas fa-clock me-2"></i>Estimated Duration</h6>
            <p>We expect to be back online shortly. Thank you for your patience.</p>
        </div>

        <div class="mt-4">
            <p class="text-muted mb-3">System administrators can still access the admin panel:</p>
            <a href="/Account/Login" class="admin-login-btn">
                <i class="fas fa-sign-in-alt me-2"></i>Admin Login
            </a>
        </div>

        <div class="mt-4">
            <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                For urgent matters, please contact your system administrator.
            </small>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
