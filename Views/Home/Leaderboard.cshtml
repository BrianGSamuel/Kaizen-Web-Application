@section Scripts {
    <script>
        $(document).ready(function() {
            // Enhanced loading state
            function showLoadingState() {
                $('.leaderboard-table tbody tr').addClass('loading-shimmer');
            }

            // Enhanced form interactions
            $('#searchForm').on('submit', function() {
                showLoadingState();
            });

            // Highlight current user with enhanced styling
            const currentUsername = '@Context.User.Identity?.Name';
            if (currentUsername) {
                $('.leaderboard-table tbody tr').each(function() {
                    const employeeName = $(this).find('.employee-details h6').text().trim();
                    if (employeeName.toLowerCase().includes(currentUsername.toLowerCase())) {
                        $(this).addClass('current-user');
                    }
                });
            }

            // Enhanced hover effects for statistics
            $('.stat-item').hover(
                function() {
                    $(this).css('transform', 'translateY(-5px) scale(1.02)');
                },
                function() {
                    $(this).css('transform', 'translateY(0) scale(1)');
                }
            );

            // Smooth scroll to table when search is performed
            $('#searchForm').on('submit', function() {
                setTimeout(function() {
                    $('html, body').animate({
                        scrollTop: $('.leaderboard-table').offset().top - 100
                    }, 500);
                }, 100);
            });
        });
    </script>
}